<?xml version="1.0" encoding="utf-8"?>
<com.zawzaw.candkassignment.viewpods.RightDrawerViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_colours"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/btn_colour_two"
        android:layout_width="27dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:layout_toLeftOf="@+id/rv_colours"
        android:scaleType="fitXY"
        android:src="@drawable/ic_btncolor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_colours"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/border"
        android:elevation="@dimen/margin_medium"
        android:paddingLeft="@dimen/margin_medium_2"
        android:paddingTop="@dimen/margin_medium_2">

    </android.support.v7.widget.RecyclerView>

</com.zawzaw.candkassignment.viewpods.RightDrawerViewPod>
