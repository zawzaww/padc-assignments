<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_medium_2"
    android:layout_marginRight="@dimen/margin_medium_2"
    android:layout_marginTop="@dimen/margin_medium_2"
    app:cardElevation="@dimen/elevation_card_size">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:lineSpacingMultiplier="1.4"
                android:text="@string/health_title"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/text_regular_3x" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.4"
                android:maxLines="4"
                android:text="@string/health_short_description"
                android:textSize="@dimen/text_regular_2x" />

            <ImageView
                android:id="@+id/iv_hero_img"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@+id/tv_short_description"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/ph_health_heroimg" />

            <TextView
                android:id="@+id/tv_info_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_hero_img"
                android:layout_below="@+id/iv_hero_img"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/bg_selector"
                android:fontFamily="@font/product_sans"
                android:text="   disease-info   "
                android:textColor="@color/text" />

            <ImageView
                android:id="@+id/iv_author_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/tv_info_type"
                android:layout_below="@+id/iv_hero_img"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_toRightOf="@+id/tv_info_type"
                android:src="@drawable/ph_author_img" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_author_img"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_toRightOf="@+id/iv_author_img"
                android:fontFamily="@font/product_sans"
                android:text="Dr. Zaw Zaw"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/text_regular" />

            <TextView
                android:id="@+id/tv_published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_author_name"
                android:layout_below="@+id/iv_hero_img"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_toRightOf="@+id/tv_author_name"
                android:fontFamily="@font/product_sans"
                android:text="Monday, July 12, 2018 "
                android:textColor="@color/color_primary"
                android:textSize="@dimen/text_regular" />

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v7.widget.CardView>
